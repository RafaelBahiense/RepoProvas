{
  "name": "template-backend",
  "version": "1.0.0",
  "description": "My code pattern for starting a typescript-based microservice",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/server.js",
    "build": "npx tsc",
    "dev": "NODE_ENV=development npx nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node src/server.ts\"",
    "test": "NODE_ENV=test npx jest --rootDir=tests -i",
    "typeorm": "ts-node ./node_modules/typeorm/cli"
